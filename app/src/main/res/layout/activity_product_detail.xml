<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="12dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#1D1E20" />

        <!-- Product Image Gallery Container -->
        <FrameLayout
            android:id="@+id/imageGalleryContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Previous Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="-18dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="6dp"
                app:icon="@drawable/ic_chevron_left"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="#333333"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="18dp"
                app:elevation="2dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="0.5dp" />

            <!-- Product Image Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProductImage"
                android:layout_width="202dp"
                android:layout_height="298dp"
                app:cardBackgroundColor="#E8E8E8"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImages"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextImage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="-18dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="6dp"
                app:icon="@drawable/ic_chevron_right"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="20dp"
                app:iconTint="#333333"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="18dp"
                app:elevation="2dp"
                app:strokeColor="#EEEEEE"
                app:strokeWidth="0.5dp" />

        </FrameLayout>

        <!-- Page Indicator Dots -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@id/imageGalleryContainer"
            app:layout_constraintStart_toStartOf="@id/imageGalleryContainer"
            app:layout_constraintTop_toBottomOf="@id/imageGalleryContainer"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="12dp"
            app:tabMinWidth="12dp"
            app:tabPaddingEnd="4dp"
            app:tabPaddingStart="4dp" />

        <!-- Product Name & Quantity Controls -->
        <LinearLayout
            android:id="@+id/layoutProductInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="45dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tabIndicator">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="Samsung Galaxy A55 Tempered Glass"
                android:textColor="#121111"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Minus Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#DFDEDE"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_minus"
                        app:tint="#292526" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="1"
                    android:textColor="#292526"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Plus Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#DFDEDE"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add"
                        app:tint="#292526" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Total Price -->
        <LinearLayout
            android:id="@+id/layoutPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="43dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutProductInfo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Total Price"
                android:textColor="#1D1E20"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Rs.1,500.00"
                android:textColor="#1D1E20"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Product Description (Bullet List) -->
        <TextView
            android:id="@+id/tvProductDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="37dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp"
            android:text="• High Quality Glass Material\n• Better Resistance Against Scratches\n• Gives Maximum Protection\n• Maintains Original Shine And Finish\n• Insulates Your Screen A Bit Against Drop\n• Makes It Much More Pleasant To Us"
            android:textColor="#787676"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutPrice" />

        <!-- Specification Section -->
        <TextView
            android:id="@+id/tvSpecificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-light"
            android:text="Specification"
            android:textColor="#50555C"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProductDescription" />

        <TextView
            android:id="@+id/tvSpecification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="37dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="4dp"
            android:text="Protect your screen with ultra-clear durability.\n\nThis tempered glass for Samsung Galaxy A55 offers edge-to-edge protection against scratches, drops, and smudges. With 9H hardness, high transparency, and easy installation, it keeps your display safe without compromising touch sensitivity or clarity."
            android:textColor="#50555C"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpecificationTitle" />

        <!-- Reviews Section Header -->
        <LinearLayout
            android:id="@+id/layoutReviewsHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpecification">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Reviews"
                android:textColor="#1D1E20"
                android:textSize="17sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvViewAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="View All"
                android:textColor="#3D93F8"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Reviews RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutReviewsHeader"
            tools:itemCount="3"
            tools:listitem="@layout/item_review" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

<!-- Floating Action Buttons at Bottom -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="28dp"
    android:background="#FEFEFE">

    <!-- Add to Cart Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddToCart"
        android:layout_width="265dp"
        android:layout_height="42dp"
        android:backgroundTint="#182B3F"
        android:fontFamily="sans-serif-medium"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textColor="#FDFDFD"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="45dp"
        app:icon="@drawable/ic_cart"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="#FDFDFD" />

    <!-- Favorite Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="Favorite"
        app:backgroundTint="#182B3F"
        app:elevation="4dp"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_favorite_border"
        app:tint="#FDFDFD" />

</LinearLayout>

</FrameLayout>
