<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Decorative Bubbles -->
        <View
            android:id="@+id/bubbleLarge1"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@drawable/bg_bubble_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-200dp"
            android:layout_marginEnd="-200dp" />

        <View
            android:id="@+id/bubbleLight1"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/bg_bubble_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="-100dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvSignupTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:textSize="50sp"
            android:textColor="#202020"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="-0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="122dp" />

        <TextView
            android:id="@+id/tvSignupTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="50sp"
            android:textColor="#202020"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="-0.01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSignupTitle1"
            android:layout_marginStart="30dp" />

        <!-- Name Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSignupTitle2"
            android:layout_marginStart="47dp"
            android:layout_marginTop="48dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_input_rounded"
                android:hint="Name"
                android:textColorHint="#D2D2D2"
                android:textColor="#202020"
                android:textSize="13.83sp"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilName"
            android:layout_marginStart="47dp"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bg_input_rounded"
                android:hint="Your number"
                android:textColorHint="#D2D2D2"
                android:textColor="#202020"
                android:textSize="13.83sp"
                android:fontFamily="sans-serif-medium"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilPhone"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input_rounded"
                android:hint="Email"
                android:textColorHint="#D2D2D2"
                android:textColor="#202020"
                android:textSize="13.83sp"
                android:fontFamily="sans-serif-medium"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/ic_eye_slash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilEmail"
            android:layout_marginStart="47dp"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_input_rounded"
                android:hint="Password"
                android:textColorHint="#D2D2D2"
                android:textColor="#202020"
                android:textSize="13.83sp"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Done Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDone"
            android:layout_width="335dp"
            android:layout_height="61dp"
            android:text="Done"
            android:textColor="#F3F3F3"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="false"
            app:backgroundTint="@color/brand_blue"
            app:cornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilPassword"
            android:layout_marginTop="48dp" />

        <!-- Cancel Button -->
        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="15sp"
            android:textColor="#202020"
            android:alpha="0.9"
            android:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnDone"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Already have an Account Link -->
        <TextView
            android:id="@+id/tvAlreadyHaveAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an Account ?"
            android:textSize="12sp"
            android:textColor="#A49D9F"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCancel"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
